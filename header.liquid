<style>
  :root {
    --header-bg: #fff;
    --header-text: #222;
    --header-accent: #2e7d32;
    --header-shadow: 0 2px 16px 0 rgba(0,0,0,0.06);
    --header-radius: 1.2rem;
    --header-padding: 1.5rem 3rem;
    --header-font: 'Inter', 'Segoe UI', Arial, sans-serif;
  }
  .header {
    background: var(--header-bg);
    color: var(--header-text);
    font-family: var(--header-font);
    border-radius: var(--header-radius);
    box-shadow: var(--header-shadow);
    padding: var(--header-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: box-shadow 0.2s;
    position: relative;
    z-index: 20;
  }
  .header__mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    font-size: 2rem;
    color: var(--header-text);
    cursor: pointer;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    transition: background 0.2s;
  }
  .header__mobile-menu-btn:focus,
  .header__mobile-menu-btn:hover {
    background: rgba(46,125,50,0.08);
    outline: none;
  }
  .header__menu {
    display: flex;
    align-items: center;
    gap: 2.5rem;
    margin: 0 2rem;
    transition: max-height 0.3s, opacity 0.3s;
  }
  .header__menu--mobile {
    display: none;
    flex-direction: column;
    gap: 1.2rem;
    background: var(--header-bg);
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    box-shadow: 0 8px 24px 0 rgba(0,0,0,0.10);
    border-radius: 0 0 1.2rem 1.2rem;
    z-index: 100;
    padding: 1rem 0;
    opacity: 0;
    max-height: 0;
    overflow: hidden;
  }
  .header__menu--mobile.open {
    display: flex;
    opacity: 1;
    max-height: 500px;
    transition: max-height 0.3s, opacity 0.3s;
  }
  .section-header {
    position: sticky;
    top: 0;
    background: transparent;
    z-index: 30;
  }
  .shopify-section-header-sticky {
    box-shadow: 0 4px 24px 0 rgba(0,0,0,0.10);
    background: var(--header-bg);
    transition: box-shadow 0.2s, background 0.2s;
  }
  .header__heading {
    margin: 0;
    font-size: 2.1rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    display: flex;
    align-items: center;
  }
  .header__heading-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--header-text);
    transition: color 0.2s;
  }
  .header__heading-link:hover,
  .header__heading-link:focus {
    color: var(--header-accent);
    outline: none;
  }
  .header__heading-logo-wrapper {
    display: flex;
    align-items: center;
    max-height: 48px;
    transition: width 0.2s;
  }
  .header__icons {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  .header__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: none;
    color: var(--header-text);
    transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    position: relative;
  }
  .header__icon:hover,
  .header__icon:focus {
    background: rgba(46,125,50,0.08);
    color: var(--header-accent);
    outline: none;
    box-shadow: 0 0 0 2px var(--header-accent);
  }
  .cart-count-bubble {
    position: absolute;
    top: -0.4rem;
    right: -0.4rem;
    background: var(--header-accent);
    color: #fff;
    border-radius: 50%;
    font-size: 0.85rem;
    min-width: 1.5rem;
    height: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    box-shadow: 0 2px 8px 0 rgba(46,125,50,0.15);
  }
  .list-menu {
    display: flex;
    gap: 2rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .list-menu__item--link {
    text-decoration: none;
    color: var(--header-text);
    font-size: 1.1rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition: background 0.2s, color 0.2s;
  }
  .list-menu__item--link:hover,
  .list-menu__item--link:focus {
    background: rgba(46,125,50,0.10);
    color: var(--header-accent);
    outline: none;
  }
  @media (max-width: 990px) {
    .header {
      flex-direction: row;
      align-items: center;
      padding: 0.7rem 1rem;
    }
    .header__mobile-menu-btn {
      display: flex;
    }
    .header__heading {
      flex: 1;
      justify-content: center;
      font-size: 1.5rem;
    }
    .header__menu {
      display: none;
    }
    .header__menu--mobile {
      display: flex;
    }
    .header__icons {
      gap: 1rem;
    }
    .header__heading-logo-wrapper {
      max-height: 36px;
    }
  }
  @media (max-width: 600px) {
    .header {
      padding: 0.5rem 0.5rem;
    }
    .header__heading {
      font-size: 1.1rem;
    }
    .header__icons {
      gap: 0.5rem;
    }
    .header__heading-logo-wrapper {
      max-height: 28px;
    }
  }
</style>

<div class="header">
  <button class="header__mobile-menu-btn" aria-label="Open menu" onclick="document.querySelector('.header__menu--mobile').classList.toggle('open')">
    &#9776;
  </button>
  <div class="header__heading">
    <!-- Logo and site name here -->
    <a href="/" class="header__heading-link">
      <span class="header__heading-logo-wrapper">
        <img src="{{ 'logo.png' | asset_url }}" alt="Site Logo" style="max-height: 100%;">
      </span>
      <span>Your Site Name</span>
    </a>
  </div>
  <nav class="header__menu">
    <!-- Desktop menu items here -->
    <ul class="list-menu">
      <li class="list-menu__item"><a href="/collections" class="list-menu__item--link">Collections</a></li>
      <li class="list-menu__item"><a href="/pages/about" class="list-menu__item--link">About</a></li>
      <li class="list-menu__item"><a href="/pages/contact" class="list-menu__item--link">Contact</a></li>
    </ul>
  </nav>
  <nav class="header__menu--mobile">
    <!-- Mobile menu items here (same as desktop, but vertical) -->
    <ul class="list-menu">
      <li class="list-menu__item"><a href="/collections" class="list-menu__item--link">Collections</a></li>
      <li class="list-menu__item"><a href="/pages/about" class="list-menu__item--link">About</a></li>
      <li class="list-menu__item"><a href="/pages/contact" class="list-menu__item--link">Contact</a></li>
    </ul>
  </nav>
  <div class="header__icons">
    <!-- Icons (cart, account, etc.) here -->
    <a href="/cart" class="header__icon" aria-label="View cart">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-cart"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
      <span class="cart-count-bubble">0</span>
    </a>
    <a href="/account" class="header__icon" aria-label="Account">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
    </a>
  </div>
</div>

<script>
  // Close mobile menu when clicking outside
  document.addEventListener('click', function(e) {
    const menu = document.querySelector('.header__menu--mobile');
    const btn = document.querySelector('.header__mobile-menu-btn');
    if (!menu || !btn) return;
    if (!menu.contains(e.target) && !btn.contains(e.target)) {
      menu.classList.remove('open');
    }
  });
</script> 